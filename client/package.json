{
	"name": "gsc",
	"displayName": "GSCode",
	"description": "IntelliSense for Call of Duty: Black Ops III's GSC & CSC languages.",
	"icon": "icons/gscode-beta.png",
	"version": "0.1.0-preview",
	"publisher": "blakintosh",
	"repository": {
		"type": "git",
		"url": "https://github.com/Blakintosh/gscode"
	},
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:gsc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"semanticTokenScopes": [
			{
				"language": "gsc",
				"scopes": {
					"parameter.defaultLibrary": [
						"variable.language"
					],
					"variable.defaultLibrary": [
						"variable.language"
					]
				}
			}
		],
		"languages": [
			{
				"id": "gsc",
				"aliases": [
					"GSC"
				],
				"extensions": [
					".gsc"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "./icons/file-gsc.png",
					"light": "./icons/file-gsc.png"
				}
			},
			{
				"id": "csc",
				"aliases": [
					"CSC"
				],
				"extensions": [
					".csc"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "./icons/file-csc.png",
					"light": "./icons/file-csc.png"
				}
			},
			{
				"id": "gsh",
				"aliases": [
					"GSH"
				],
				"extensions": [
					".gsh"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "./icons/file-gsh.png",
					"light": "./icons/file-gsh.png"
				}
			}
		],
		"commands": [],
		"grammars": [
			{
				"language": "gsc",
				"scopeName": "source.gsc",
				"path": "./syntaxes/gsc.tmGrammar.json"
			},
			{
				"language": "csc",
				"scopeName": "source.gsc",
				"path": "./syntaxes/gsc.tmGrammar.json"
			},
			{
				"language": "gsh",
				"scopeName": "source.gsc",
				"path": "./syntaxes/gsc.tmGrammar.json"
			}
		],
		"configuration": {
			"title": "GSCode",
			"properties": {
				"gsc.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": ["off","messages","verbose"],
                    "default": "off"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"dotenv": "^16.4.5",
		"stack-typescript": "^1.0.4",
		"vscode-languageclient": "^8.0.2",
		"vscode-languageserver": "^8.0.2",
		"vscode-nls": "^5.0.0",
		"vscode-textmate": "^6.0.0"
	}
}
