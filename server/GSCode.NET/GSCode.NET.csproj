  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\GSCode.Parser\GSCode.Parser.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="API\t7_api_csc.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
